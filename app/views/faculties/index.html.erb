
<%= render :partial => "layouts/shared/sidebar" %>

<div class="column" id="content">
  <div class="ui grid">
  <%= render :partial => "layouts/shared/notice"%>
    <div class="row">
      <h1 class="ui huge header">
        All Faculties
      </h1>
    </div>
    <div class="ui divider"></div>

    <div class="row">
    <table class="ui single line striped selectable table">
      <thead>
        <tr>
          <th>
            Name
          </th>
         
          <th>
            Name of Institution
          </th>

          <th colspan="3">
            
          </th>
        </tr>
      </thead>
      
      <tbody>
        <% @faculties.each do |faculty| %>
          <tr>
            <td><%= faculty.name %></td>
            <td><%= faculty.mother_institution(faculty.institution_id) %></td>
            <td><%= link_to '<i class="eye icon"></i>View'.html_safe, faculty, class: "ui basic button" %></td>
            <td><%= link_to '<i class="edit outline icon"></i>Edit'.html_safe, edit_faculty_path(faculty), class: "ui basic button" %></td>
            <td><%= link_to '<i class="trash icon"></i>Delete'.html_safe, faculty, method: :delete, data: { confirm: 'Are you sure?' }, class: "negative ui button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


<br>

<%= link_to '<i class="plus circle icon"></i>New Faculty'.html_safe, new_faculty_path, class: "positive ui button" %>



     



