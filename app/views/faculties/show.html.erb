<%= render :partial => "layouts/shared/sidebar" %>
<div class="column" id="content">
  <div class="ui ">
    <%= render :partial => "layouts/shared/notice" %>
    <div class="row">
      <h1 class="ui huge header">
        View Faculty
      </h1>
    </div>
    <div class="ui divider"></div>
    <br />

    <div class="item">
      <strong>Name:</strong>
      <%= @faculty.name %>
    </div>

    <div class="item">
      <strong>Institution:</strong>
      <%= Institution.find(@faculty.institution_id).name %>
    </div>

    
    <br />
<% if current_user.admin? %>
  <%= link_to 'Edit Faculty', edit_faculty_path(@faculty), class: "ui large button" %> |
<% end %>
<%= link_to 'All Faculties', faculties_path, class: "ui large button" %>
