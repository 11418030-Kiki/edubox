<%= render :partial => "layouts/shared/sidebar" %>

<div class="column" id="content">
  <div class="ui grid">
  <%= render :partial => "layouts/shared/notice"%>
    <div class="ui divider"></div>
    
    <div class="ui hidden section divider"></div>
    <div class="row">
      <h1 class="ui huge header">
        Documents
      </h1>
    </div>
    <div class="ui divider"></div>

    <div class="row">
      <table class="ui single line striped selectable table">
        <thead>
          <tr>
            <th>Document Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @documents.each do |document| %>
            <tr>
              <td><%= document.name %></td>
              <td><%= link_to 'View', document, class: "ui basic button" %></td>
              <td><%= link_to 'Edit', edit_document_path(document), class: "ui basic button" %></td>
              <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, class: "negative ui button" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

<br>

<%= link_to 'Add Document', new_document_path, class: "positive ui button"  %>
